<div class="genre_search">
  <table class="table table-hover">
    <tr>
      <th style="border-bottom: 6px solid #e63d00;" >カテゴリー検索</th>
    </tr>

    <% @genres.each do |genre| %>
      <tr class="institution_index_tbody_tr" data-href="/admin/genre/search/<%= genre.id %>">
        <td><%= link_to genre.name, admin_genre_search_path(genre.id) , class: "link-color" %></td>
      </tr>
    <% end %>

    <% @recommended_bento = BentoBox.find_by(recommended: true) %>
    <% if @recommended_bento %>
      <tr class="institution_index_tbody_tr" data-href="/admin/genre/recommend">
        <td><%= link_to "おすすめ",admin_recommend_search_path , class: "link-color" %></td>
      </tr>
    <% end %>

    <tr class="institution_index_tbody_tr" data-href="/admin/bento">
      <td><%= link_to "一覧",admin_bento_index_path, class: "link-color" %></td>
    </tr>

  </table>
</div>