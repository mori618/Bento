<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2>従業員一覧</h2>
      </div>

      <table class="table table-striped table-hover mt-3 mobile-blocky" style="background-color: #fff;">
        <thead>
          <tr>
            <th>氏名</th>
            <th>電話番号</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>

        <% @admins.each do |admin| %>
          <tr>
            <td><%= admin.name %></td>
            <td><%= admin.phone_number %></td>
            <td>
              <% if admin.is_active %>
                <div class="text-success">在籍</div>
              <% else %>
                退職
              <% end %>
            </td>
            <td>
              <%= link_to "編集する",edit_admin_admin_path(admin), class: "btn btn-outline-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </table>
          <%= paginate @admins %>

    </div>
  </div>
  <div class="row float-right">
    <div>
      <%= link_to "従業員新規登録",new_admin_admin_path %>
    </div>
  </div>
</div>
