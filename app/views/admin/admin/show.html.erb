<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2><%= @admin.last_name %></h2>
      </div>

      <table class="table table-striped table-hover mt-3 mobile-blocky" style="background-color: #fff;">

          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
 
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_active %>
              <div class="text-success">有効</div>
            <% else %>
              退会
            <% end %>
          </td>
        </tr>

      </table>
    </div>
  </div>
  <div class="row float-right">
    <div>
      <%= link_to "会員一覧へ",admin_customer_index_path ,class:"mr-5"%>
      <%= link_to "#{@customer.last_name}様の会員情報を編集する",edit_admin_customer_path(@customer) %>
    </div>
  </div>
</div>
