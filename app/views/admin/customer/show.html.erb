<div class="container p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2><%= @customer.last_name %>様会員詳細</h2>
      </div>

      <table class="table table-striped table-hover mt-3" style="background-color: #fff;">
        <tr>
          <th style="width: 30%">会員ID</th>
          <td><%= @customer.id %></td>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>シメイ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_active %>
              <div class="text-success">有効</div>
            <% else %>
              退会
            <% end %>
          </td>
        </tr>

      </table>
    </div>
  </div>
  <div class="row float-right">
    <div>
      <%= link_to "会員一覧へ",admin_customer_index_path ,class:"mr-5"%>
      <%= link_to "#{@customer.last_name}様の会員情報を編集する",edit_admin_customer_path(@customer) %>
    </div>
  </div>
</div>
