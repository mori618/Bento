<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2><%= @customer.last_name %>様会員情報編集</h2>
      </div>
      <%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
      <% if @customer.errors.any? %>
        <%= @customer.errors.count %>件のエラーが発生しました
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <div class="m-3">
          <div class="m-auto p-3 max-width gray" style=" width: 430px;">
            <div class="field text-left">
              <%= f.label :last_name,"名前" %><br />
              <%= f.text_field :last_name , autofocus: true, :placeholder => "姓" , class: "max-width" %> <%= f.text_field :first_name ,:placeholder => "名", class: "max-width" %>
            </div>
            <div class="field text-left">
              <%= f.label :last_name_kana,"フリガナ" %><br />
              <%= f.text_field :last_name_kana ,:placeholder => "セイ" , class: "max-width" %> <%= f.text_field :first_name_kana ,:placeholder => "セイ", class: "max-width" %>
            </div>
            <div class="field text-left">
              <%= f.label :telephone_number,"電話番号" %><br />
              <%= f.text_field :telephone_number,:placeholder => "00000000000   ハイフンなし" ,size: 46 , class: "max-width" %>
            </div>
            <div class="field text-left">
              <%= f.label :email,"メールアドレス" %><br />
              <%= f.email_field :email, autocomplete: "email",:placeholder => "email",size: 46 , class: "max-width" %>
            </div>

            <div class="field text-left">
              <%= f.label :post_code ,"郵便番号" %><br />
              <%= f.text_field :post_code ,:placeholder => "0000000   ハイフンなし" , class: "max-width" %>
            </div>
            <div class="field text-left">
              <%= f.label :address ,"住所" %><br />
              <%= f.text_field :address ,:placeholder => "京都府京都市",size: 46, class: "max-width" %>
            </div>
            <div class="field text-left">
              <%= f.label :is_active ,"会員ステータス" %><br />
                <%= f.radio_button :is_active, :true %>
                  有効
                <%= f.radio_button :is_active, :false %>
                  退会
            </div>
          </div>

          <div class="row">
            <div class="col-md-8 offset-4"><br />
              <%= f.submit "更新する" ,class: "btn btn-outline-success"%>
            </div>
          </div>

        </div>

      <% end %>
      </div>
    </div>
  <div class="row float-right">
    <div>
      <%= link_to "会員情報に戻る",admin_customer_path(@customer) ,class:"link-color" %>
    </div>
  </div>
</div>