<div class="container p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2><%= @dish.name %></h2>
      </div>
      <div class="row d-flex justify-content-center m-3">
        <% if @dish.present? %>
          <div class="col-8 text-left">
            <%= image_tag @dish.dish_image,class:"img-fluid" ,style: "width:50%;" %>
            <%= @dish.introduction %>
          </div>

        <% else %>
          <p>データが存在しません</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row float-right">
    <div>
      <%= link_to '削除する', admin_dish_path(@dish), method: :delete, data: { confirm: '本当に消しますか？' }, class: "text-danger mr-5"%>
      <%= link_to "おかず一覧に戻る",admin_dishes_path ,class: "mr-5"%>
      <%= link_to "編集する",edit_admin_dish_path(@dish)%>
    </div>
  </div>
</div>