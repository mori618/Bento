<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2>おかずカテゴリー一覧</h2>
      </div>
      <div class="d-flex justify-content-between" style="background-color: #fff; padding-top: 5px;">
        <div>
          <%= flash[:notice] %>
        </div>
        <div>
          <%= form_with model: @genre, url: admin_genre_dishes_path do |f| %>
            <%= f.text_field :name ,:placeholder => "ジャンル名" , class: "m-1" %>
            <%= f.submit "新規登録" %>
          <% end %>
        </div>
      </div>

      <table class="table table-striped table-hover" style="background-color: #fff;">
        <thead>
          <tr>
            <th>カテゴリー名</th>
            <th></th>
          </tr>
        </thead>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-right">
              <%= link_to "編集する", edit_admin_genre_dish_path(genre.id), class: "btn btn-sm btn-outline-success mr-5" %>
              <%= link_to '削除', admin_genre_dish_path(genre), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-danger"%>
            </td>
          </tr>
        <% end %>
      </table>

      <%= paginate @genres %>
    </div>
  </div>
  <div class="row float-right">
    <div>
      <%= link_to "弁当カテゴリー一覧へ",admin_genres_path %>
    </div>
  </div>
</div>
