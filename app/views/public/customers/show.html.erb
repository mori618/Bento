<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2>マイページ</h2>
      </div>

      <table class="table table-striped table-hover mt-3" style="background-color: #fff;">
        <%= flash[:notice] %>
        <tr>
          <th style="width: 30%">会員ID</th>
          <td><%= @customer.id %></td>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>シメイ</th>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>


      </table>
    </div>
  </div>
  <div class="row float-right">
    <div>
      <%= link_to "会員情報を編集する",edit_customer_path %>
      </div>
  </div>
</div>
