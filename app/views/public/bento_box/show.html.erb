<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2><%= @bento.name %></h2>
      </div>
      <div class="row d-flex justify-content-center m-3">
        <div class="col-8 text-left">
          <div class="row">
            <div class="col-md-6">
              <%= image_tag @bento.bento_image,class:"img-fluid" ,style: "width:50%;" %>
            </div>
            <div class="col-md-6">
              <h6 class="p-2" style="background-color: #e6f5ff;">紹介文</h6>
              　<%= @bento.introduction %>
              <h6 class="p-2" style="background-color: #e6f5ff;">値段</h6>
              　<%= @bento.price %>円
              <h6 class="p-2" style="background-color: #e6f5ff;">カテゴリー</h6>
              　<%= @bento.genre.name %>
            </div>
          </div>
          <h4 class="p-2 row" style="background-color: #e6f5ff;">おかず</h4>
          <% @bento.dishes.each do |dish| %>
            <%= link_to dish_path(dish) do %>
              <%= image_tag dish.dish_image,size: "100x60" %>
              <%= dish.name %>
            <% end %>
          <% end %>
        </div>
        <%= form_with model: @carts, url: carts_path, method: :post do |f| %>
        <%= f.hidden_field :bento_box_id, :value => @bento.id %>
        <% if customer_signed_in? %>
        <table>
          <tr>
            <td><%= f.number_field :amount, :placeholder => "注文個数", in: 0..2000 %></td>
            <td><%= f.submit "カートに入れる",  class: "btn btn-outline-success btn-sm" %></td>
          </tr>
        </table>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row float-right">
    <div>
      <%= link_to "弁当一覧に戻る",bento_index_path ,class: "mr-5"%>
    </div>
  </div>
</div>