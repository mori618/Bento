<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2>弁当一覧</h2>
      </div>

      <div class="max-box d-flex flex-wrap">
        <% if @bentoes.present? %>
          <% @bentoes.each do |bento| %>
            <div class="card m-3" style="width: 18rem;">
              <%= image_tag bento.bento_image, class: "card-img-top", alt: bento.name %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title mt-auto m-0"><%= bento.name %></h5>
                <p class="card-text m-0"><%= bento.introduction %></p>
                <div class="float-right">
                  <%= link_to "詳細を見る",bento_path(bento), class: "btn btn-outline-primary btn-sm stretched-link"%>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>データが存在しません</p>
        <% end %>
      </div>
      <%= paginate @bentoes %>
    </div>
  </div>
</div>