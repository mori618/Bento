<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-md-2">
      <% if @genres.present? %>
        <%= render 'public/searches/genre.html.erb' %>
      <% end %>
    </div>
    <div class="col-10">
      <div class="title-body">
        <h2>弁当一覧</h2>
      </div>

      <div class="max-box d-flex flex-wrap">
        <% if @bento.present? %>
          <div class="card m-3" style="width: 18rem;">
            <%= image_tag @bento.bento_image, class: "card-img-top", alt: @bento.name %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title mt-auto m-0"><%= @bento.name %></h5>
              <p class="card-text m-0"><%= @bento.introduction %></p>
              <h6 class="text-success" style="background-color: #e6f5ff;">おすすめ！</h6>
              <div class="float-right">
                <%= link_to "詳細を見る",bento_path(@bento), class: "btn btn-outline-primary btn-sm stretched-link" %>
              </div>
            </div>
          </div>
        <% else %>
          <p>データが存在しません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>