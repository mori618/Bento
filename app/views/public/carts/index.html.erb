<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2>カート</h2>
      </div>
      <div class="row d-flex justify-content-center m-3">
        <div class="col-md-10 max-box d-flex flex-wrap">
          <% @nedan = 0 %>
          <% @carts.each do |f| %>
            <% @nedan = @nedan + f.subtotal %>
            <div class="card m-3" style="width: 18rem;">
                <%= image_tag f.bento_box.bento_image, size:'100x100',class: "m-auto"%>
                <h6 class="p-2" style="background-color: #e6f5ff;"><%= f.bento_box.name %><%= f.bento_box.price%>円</h6>
              <div class="card-body d-flex flex-column">
                <%= form_with model: f, url: cart_path(f), method: :patch do |d| %>
                  <%= d.number_field :amount, :placeholder => "注文個数", style: "margin: 0; width: 100px;", in: 0..2000 %>　個<%= d.submit "変更", class: "btn btn-outline-success btn-sm ml-2 mb-1" %>
                <% end %>
                <p class="card-text m-1" style="background-color: #e6f5ff;">小計：　<%= f.subtotal%>円</p>
                <div class="ml-auto">
                  <%= link_to "削除", cart_path(f), method: :delete, class: "btn btn-outline-danger btn-sm mt-1" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-md-2">
          <div class="mb-0 p-2" style="background-color: #e6f5ff; border-radius: 10px;">
            <h6 class="mb-0 p-2 text-left" style="background-color: #fff; border-radius: 10px;">合計金額</h6>
            <h6 class="mt-0 p-2"><%= @nedan %>円</h6>
            <div class="ml-auto">
              <% unless @carts.empty? %>
              <%= link_to "情報入力に進む", order_path, class: "btn btn-success btn-sm" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="ml-auto">
      <%= link_to "カートを空にする",  carts_destroy_all_path, method: :delete, class: "btn btn-outline-danger mr-auto" %>
    </div>
    <div class="ml-auto">
      <%= link_to "買い物を続ける",bento_index_path ,class: "mr-5 btn btn-outline-primary mr-auto"%>
    </div>
  </div>
</div>