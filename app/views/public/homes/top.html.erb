<div class="container-xxl p-5">
  <div class="row text-center">
    <div class="col-12">
      <div class="title-body">
        <h2>弁当コック</h2>
      </div>
      <% if @bento %>
      <div class="card m-3" style="width: 18rem;">
        <%= image_tag @bento.bento_image, class: "card-img-top", alt: @bento.name %>
        <div class="card-body d-flex flex-column">
        <h5 class="card-title mt-auto m-0"><%= @bento.name %></h5>
        <p class="card-text m-0"><%= @bento.introduction %></p>
        <div class="float-right">
          <%= link_to "詳細を見る",bento_path(@bento), class: "btn btn-outline-primary btn-sm stretched-link" %>
        </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>